version: '3'
services:
  # Flask App Service
  flask_app:
    build:
      context: .
    command: gunicorn -b 0.0.0.0:5000 run:app --log-level debug
    ports:
      - "5000:5000" 
    depends_on:
      - redis
    environment:
      - FLASK_DEBUG=1  
      - FLASK_APP=run 
    volumes:
      - .:/flaskblog  
    networks:
      - app_network 

  # Celery Worker Service
  celery_worker:
    build: .
    environment:
      FLASK_APP: run
    command: celery -A run.celery worker --pool=solo --loglevel=info
    depends_on:
      - redis
    volumes:
      - .:/flaskblog
    networks:
      - app_network  

  # Redis Service
  redis:
    image: redis:6.2  
    networks:
      - app_network 
   
   # Nginx Service
  nginx:
    image: nginx:latest
    ports:
      - "80:80" 
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - flask_app
    networks:
      - app_network

networks:
  app_network: 
    driver: bridge

volumes:
  redis_data:
